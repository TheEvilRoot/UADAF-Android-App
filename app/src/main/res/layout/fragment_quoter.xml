<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".quoter.QuoterFragment" android:id="@+id/coordinatorLayout" android:background="?attr/colorBackground" >

    <com.simplecityapps.recyclerview_fastscroll.views.FastScrollRecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/quoterRecyclerView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scrollbars="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:fastScrollPopupTextSize="15sp"
            app:fastScrollPopupBackgroundSize="24dp"
            app:fastScrollPopupBgColor="@color/colorPrimaryDark"
            app:fastScrollThumbColor="@color/colorPrimaryDark"
            tools:listitem="@layout/quote_layout" app:layout_constraintTop_toTopOf="parent">
    </com.simplecityapps.recyclerview_fastscroll.views.FastScrollRecyclerView>

    <org.uadaf.app.internal.view.fabs.ModesFAB
            android:src="@drawable/ic_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" android:id="@+id/fabMenu"
            app:fabSize="normal"
            style="@style/Widget.MaterialComponents.FloatingActionButton" android:focusable="true"
            app:layout_anchorGravity="right|bottom"
            app:layout_anchor="@+id/quoterRecyclerView"
            app:rippleColor="?attr/colorIcons"
            app:backgroundTint="?attr/colorPrimaryDark"
            android:tint="?attr/colorIcons"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <org.uadaf.app.internal.view.fabs.FAB
            android:src="@drawable/ic_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" android:id="@+id/fabSearch" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/fabMenu"
            app:backgroundTint="?attr/colorPrimaryDark" app:rippleColor="?attr/colorIcons"
            android:tint="?attr/colorIcons" android:focusable="true"/>
    <org.uadaf.app.internal.view.fabs.FAB
            android:src="@drawable/ic_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" android:id="@+id/fabAdd" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/fabSearch"
            app:backgroundTint="?attr/colorPrimaryDark" app:rippleColor="?attr/colorIcons"
            android:tint="?attr/colorIcons" android:focusable="true"/>
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content"
                                                       android:id="@+id/toolbar"
                                                       android:background="@drawable/bg_badge"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       app:layout_constraintTop_toTopOf="parent"
                                                       android:layout_marginTop="8dp"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/repoNameView"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" tools:text="TextView"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                android:textAllCaps="true"/>
        <ImageView
                android:src="@drawable/ic_edit"
                android:layout_width="16dp"
                android:layout_height="16dp" android:id="@+id/imageButton"
                app:layout_constraintStart_toEndOf="@+id/repoNameView" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>