<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:background="?attr/colorMain">

    <TextView
            android:textColor="?attr/colorTextMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/idView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@android:style/TextAppearance.Material.Title" tools:text="#1"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
    <TextView
            android:textColor="?attr/colorTextSecond"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/editView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/idView" android:layout_marginStart="8dp"
            tools:text="Edited by ... at ..."
            android:textAppearance="@android:style/TextAppearance.Material.Caption" android:textAlignment="textEnd"/>
    <TextView
            android:textColor="?attr/colorTextMain"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/titleView"
            app:layout_constraintTop_toBottomOf="@+id/idView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" android:layout_marginStart="8dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" tools:text="TextView"/>
    <TextView android:textColor="?attr/colorTextSecond"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:id="@+id/authorView"
              app:layout_constraintTop_toBottomOf="@+id/titleView" app:layout_constraintStart_toStartOf="parent"
              tools:text="(c) ,,,," android:layout_marginTop="8dp" android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>